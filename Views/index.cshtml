@{
  Layout="shared/_Layout.cshtml";
}

<div class="jumbotron">
  <h1>My Address Book!</h1>
</div>
@if (@Model.Count == 0)
{
  <h3>You Have No Friends!</h3>
}
@foreach (var contact in Model)
{
  <h3><a href='/contacts/@contact.GetId()'>@contact.GetName()</a></h3>
}
<h3> <a href="/address/form">Add Contact</a></h3>

<form action="/contacts/clear" method="post">
  <button type="submit" name"button">Delete All Contacts</button>
</form>
